<div class='col-md-6 mx-auto mt-6 info-box'>
  <form class='p-4' id="signup-form" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrf}}" />
    <div class='form-group'>
      <label for="email">NAME</label>
      <input class="form-control" type="text" name="name" id="name" placeholder="" autofocus="autofocus" autocomplete="name" required="required"/>
    </div>
    <div class='form-group'>
      <label for="email">EMAIL</label>
      <input class="form-control" type="email" name="email" id="email" placeholder="" autocomplete="email" required="required"/>
    </div>
    <div class="form-group pt-4">
      <label for="password">PASSWORD</label>
      <input class="form-control" type="password" name="password" id="password" placeholder="" autocomplete="new-password" minlength="8" required="required"/>
    </div>
    <div class="form-group">
      <label for="confirmPassword">CONFIRM PASSWORD</label>
      <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" placeholder="" autocomplete="new-password" minlength="8" required="required"/>
    </div>
    <div class="form-group">
      <button class="btn btn-success" type="submit"><i class="fas fa-user-plus fa-sm"></i>SIGNUP</button>
    </div>
  </form>
</div>